{
  "project": {
    "name": "科普视频自动化制作系统",
    "version": "1.0.0-beta",
    "author": "AI Assistant"
  },

  "ai": {
    "provider": "openai",
    "model": "gpt-4",
    "api_key": "YOUR_API_KEY_HERE",
    "base_url": "https://api.openai.com/v1",
    "temperature": 0.7,
    "max_tokens": 2000,
    "_comment": "支持的provider: openai, glm, anthropic",
    "_glm_example": {
      "provider": "glm",
      "model": "glm-4.5",
      "api_key": "YOUR_GLM_API_KEY",
      "base_url": "https://open.bigmodel.cn/api/paas/v4/",
      "temperature": 0.7,
      "max_tokens": 2000,
      "_models": "可选模型: glm-4.5 (推荐), glm-4.5-air (快速), glm-4.5v (多模态)",
      "_get_api_key": "获取API Key: https://open.bigmodel.cn/"
    }
  },

  "video": {
    "default_duration": 180,
    "resolution": {
      "width": 1280,
      "height": 720
    },
    "fps": 24,
    "output_format": "mp4",
    "codec": "libx264",
    "bitrate": "3000k",
    "default_image_duration": 5.0,
    "transition_duration": 1.0,
    "show_narration_text": true,
    "text_size": 36,
    "estimated_bitrate_mb_per_min": 3.0
  },

  "subtitle": {
    "font": "Arial",
    "font_size": 48,
    "font_color": "white",
    "bg_color": "black",
    "bg_opacity": 0.5,
    "position": "bottom",
    "language": "zh-CN"
  },

  "paths": {
    "materials": "./materials",
    "templates": "./templates",
    "output": "./output",
    "scripts": "./output/scripts",
    "subtitles": "./output/subtitles",
    "videos": "./output/videos",
    "audio": "./materials/audio"
  },

  "tts": {
    "provider": "edge",
    "model": "tts-1",
    "api_key": "",
    "voice": "zh-CN-XiaoxiaoNeural",
    "speed": 1.0,
    "enable_bgm_mixing": true,
    "bgm_volume": 0.2
  },

  "script_generator": {
    "default_style": "popular_science",
    "target_audience": "general_public",
    "video_length": "3-5min",
    "language": "zh-CN",
    "include_hook": true,
    "include_cta": true
  },

  "ai_image": {
    "provider": "dalle",
    "model": "dall-e-3",
    "api_key": "YOUR_DALLE_API_KEY_HERE",
    "default_size": "1024x1024",
    "default_quality": "standard",
    "default_style": "educational illustration, clean, simple, colorful",
    "api_url": "",
    "sd_api_key": ""
  },

  "material_manager": {
    "auto_tag": true,
    "auto_categorize": true,
    "default_category": "uncategorized",
    "max_file_size_mb": 100
  },

  "smart_effects": {
    "enable": true,
    "use_ai_analysis": false,
    "fallback_to_rules": true,
    "ken_burns_enabled": true,
    "transition_intensity": "auto",
    "energy_threshold": {
      "high": 7.5,
      "medium": 5.0,
      "low": 3.0
    },
    "description": "智能动效系统配置 - AI驱动的转场和动画"
  },

  "pexels": {
    "api_key": "",
    "description": "Pexels API密钥 - 免费申请: https://www.pexels.com/api/",
    "rate_limit_per_hour": 200,
    "auto_download": true,
    "preferred_video_quality": "hd",
    "preferred_photo_quality": "large2x"
  },

  "unsplash": {
    "access_key": "",
    "description": "Unsplash Access Key - 免费注册: https://unsplash.com/developers",
    "rate_limit_per_hour": 50,
    "auto_download": true,
    "preferred_quality": "regular"
  },

  "smart_material_fetch": {
    "enable": true,
    "auto_download": true,
    "prefer_videos": true,
    "min_local_results": 3,
    "description": "智能素材获取: 本地→Pexels→Unsplash→DALL-E四级策略",
    "fallback_to_dalle": false,
    "cache_duration_days": 7
  }
}
